<h1>This is the show page for an individual instance of your user model.</h1>
<!DOCTYPE html>
<html>
  <head>
    <title>Movie Snob</title>
  </head>
  <body>
    <% if logged_in? %>
      <a href="/users/<%= @user.id %>/edit">Edit Your Profile</a>
      <h2>"Hello <%= @user.username %>"</h2>
        <form method="POST" action="/posts">
            <h3>Release Your Inner Snob</h3>
            </br>
            <input type = "text" name = "movie" id = "movie" placeholder = "movie">
            </br>
            <input type = "text" name = "title" id = "post" placeholder = "Title" maxlength = "40">
            </br>
            <input type = "text" name = "comment" id = "commetn" placeholder = "Say Something!" maxlength = "140">
            </br>
            <input type = "submit" value = "Submit">
        </form>
        <% @user.posts.all.each do |post|%>
          <h3><%= post.title %></h3>
          <p><%= post.comment%></p>
          <a href = "/posts/<%=post.id%>">go to post</a>
        <% end %>
    <% else %>
        <% redirect to '/'%>
    <% end %>
  </body>
</html>